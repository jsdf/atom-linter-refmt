{
  "name": "linter-refmt",
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Lint Reason code with refmt",
  "keywords": [
    "reason",
    "ocaml",
    "format",
    "refmt"
  ],
  "activationHooks": [
    "language-reason:grammar-used",
    "nuclide-language-reason:grammar-used"
  ],
  "repository": "https://github.com/jsdf/atom-linter-refmt",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "configSchema": {
    "refmtPath": {
      "title": "Path to refmt",
      "type": "string",
      "default": "refmt",
      "order": 1
    }
  }
}
