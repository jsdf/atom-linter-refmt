{
  "name": "linter-refmt",
  "main": "./lib/main",
  "version": "0.3.1",
  "description": "Lint Reason code with refmt",
  "keywords": [
    "reason",
    "ocaml",
    "format",
    "refmt"
  ],
  "repository": "https://github.com/jsdf/atom-linter-refmt",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "flow": "flow",
    "test": "flow && jest"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "configSchema": {
    "refmtPath": {
      "title": "Path to refmt",
      "type": "string",
      "default": "refmt",
      "order": 1
    }
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "flow-bin": "^0.48.0",
    "jest": "^20.0.4",
    "regenerator-runtime": "^0.10.5"
  }
}
